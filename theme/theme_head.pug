meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
// if IEmeta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

meta(http-equiv='X-UA-Compatible', content='IE=9; IE=8; IE=7; IE=EDGE')
title=title
meta(name='keywords', content!=keywords)
meta(name='description', content!=description)

meta(name='format-detection', content='telephone=no')
//- meta(content='width=1100, user-scalable=no', name='viewport')
meta(content='width=device-width, initial-scale=1, maximum-scale=1', name='viewport')

if noindex==1
  meta(name='robots', content='INDEX,FOLLOW')
else
  meta(name='robots', content='NOINDEX,NOFOLLOW')

if favicon==1
  link(rel='icon', type='image/x-icon', href=dir+'images/favicon.ico', sizes='32x32')

if canonical==1
  // Canonical 
  if pagelevel==1
    link(rel='canonical', href='https://demopage.jp/'+page)
  else
    link(rel='canonical', href='https://demopage.jp/')

//JS MAIN 
script(src='//code.jquery.com/jquery-1.8.3.min.js')

// CSS MAIN
link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
link(rel='stylesheet', href=dir+'css/base.css')
//- link(rel='stylesheet', href=dir+'css/slick/slick.css')
//- link(rel='stylesheet', href=dir+'css/slick/slick-theme.css')
case pagelevel
  when 0: link(rel='stylesheet', href=dir+'css/top.css')
  when 1: link(rel='stylesheet', href=dir+'css/content.css')
  when 2: link(rel='stylesheet', href=dir+'css/content.css')
  //- default: link(rel='stylesheet', href=dir+'css/base.css')

if carousel
  link(rel='stylesheet', href=dir+'css/owlcarousel/owl.carousel.min.css')
  link(rel='stylesheet', href=dir+'css/owlcarousel/owl.theme.default.min.css')

if slickslider
  link(rel='stylesheet', href=dir+'css/slick/slick.css')
  link(rel='stylesheet', href=dir+'css/slick/slick-theme.css')
  
if lightbox
  link(rel='stylesheet', href=dir+'css/lightbox/lightbox.css')